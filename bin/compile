#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing ecasound"
BUILD_DIR=$1


cd $BUILD_DIR
cd $VENDOR_DIR

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/ecasound.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'brew install ecasound' >> $PROFILE_PATH
