#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ecasound"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="http://ecasound.seul.org/download/ecasound-2.8.1.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz
cd "ecasound-2.8.1"
./configure
make
make install

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/ecasound.sh"
mkdir -p $(dirname $PROFILE_PATH)
